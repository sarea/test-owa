{
  "compileOnSave": false,
  "include" : [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@@lib/*": ["./src/lib/*"],
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
